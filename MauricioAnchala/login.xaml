<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauricioAnchala.login">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png "></Image>
            <Entry x:Name="TxtUsuario" Placeholder="User"></Entry>
            <Entry x:Name="TxtPass" Placeholder="Password" IsPassword="True"></Entry>

            <Button x:Name="BtnAbrir" Text="Abrir" Clicked="BtnAbrir_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>